<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_spot"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="开始识别" />

        <TextView
            android:id="@+id/stop_spot"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="暂停识别" />

        <TextView
            android:id="@+id/show_rect"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="显示扫描框" />

        <TextView
            android:id="@+id/hidden_rect"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="隐藏扫描框" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_spot_showrect"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="开始识别显示扫描框" />

        <TextView
            android:id="@+id/stop_spot_hiddenrect"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="暂停识别隐藏扫描框" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_preview"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="开始预览" />

        <TextView
            android:id="@+id/stop_preview"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="停止预览" />

        <TextView
            android:id="@+id/scan_barcode"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="扫条码" />

        <TextView
            android:id="@+id/scan_qrcode"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="扫二维码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/open_flashlight"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="开灯" />

        <TextView
            android:id="@+id/close_flashlight"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="关灯" />

        <TextView
            android:id="@+id/choose_qrcde_from_gallery"
            style="@style/customTextView"
            android:onClick="widgetClick"
            android:text="从相册选取扫描" />
    </LinearLayout>

</LinearLayout>
