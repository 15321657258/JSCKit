<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System ProgressBar:" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="2"
        android:progressDrawable="@drawable/progressbar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="98"
        android:progressDrawable="@drawable/progressbar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="70"
        android:secondaryProgress="32"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="JSCRoundCornerProgressBar:" />

    <jsc.kit.component.progressbar.JSCRoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:rc_background_color="#f2f2f2"
        app:rc_max="100"
        app:rc_progress="2"
        app:rc_progress_color="@color/colorAccent" />

    <jsc.kit.component.progressbar.JSCRoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:rc_background_color="#f2f2f2"
        app:rc_max="100"
        app:rc_progress="20"
        app:rc_progress_color="@color/colorAccent" />

    <jsc.kit.component.progressbar.JSCRoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:rc_background_color="#f2f2f2"
        app:rc_max="100"
        app:rc_progress="98"
        app:rc_progress_color="@color/colorAccent" />

    <jsc.kit.component.progressbar.JSCRoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:rc_background_color="#f2f2f2"
        app:rc_max="100"
        app:rc_progress="65"
        app:rc_text="65%"
        app:rc_text_size="14sp"
        app:rc_text_color="@android:color/white"
        app:rc_progress_color="@color/colorAccent" />

</LinearLayout>
